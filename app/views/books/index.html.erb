<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <%= link_to edit_user_path(@user) do %>
        <button type="button" class="btn btn-outline-secondary btn-block"><i class="fas fa-user-cog"></i></button>
      <% end %>
      <h2 class="mt-3">New book</h2>
      <%= form_with model:@book, local:true do |f| %>
        <label for="inputTitle">Name</label>
        <%= f.text_field :title, id:"inputTitle", class: "mb-2" %>
        <label for="inputBody">Opinion</label>
        <%= f.text_area :body, rows:'3', id:'inputBody' %>
        <%= f.submit "Create Book", class: "btn btn-success mt-1" %>
      <% end %>
        
    </div>
  </div>
</div>