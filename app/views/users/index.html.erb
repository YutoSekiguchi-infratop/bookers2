<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'commons/user_info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= form_with model:@book, url:books_path, local:true do |f| %>
        <label for="inputTitle">Name</label>
        <%= f.text_field :title, id:"inputTitle", class: "mb-2" %>
        <label for="inputBody">Opinion</label>
        <%= f.text_area :body, rows:'3', id:'inputBody' %>
        <%= f.submit "Create Book", class: "btn btn-success mt-1" %>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg", size: '60x60' %>
              </td>
              <td>
                <%= user.name %>
              </td>
              <td>
                <%= link_to "Show", user_path(user) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>